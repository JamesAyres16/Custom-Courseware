<%- include('../partials/header') %>
<%- include('../partials/nav') %>

<div id="subsection_container" class="mb-5" data-subsection-id="<%= subsection.id %>">
  <div class="position-absolute mx-5 px-5" style="z-index: 5;">
    <% if (subsection.section.enableSubsections) { %>
      <a href="/sections/<%= subsection.section.id %>">
        <%= subsection.section.name %>
      </a>
      /<%= subsection.name %>
    <% } else { %>
      <%= subsection.section.name %>
    <% } %>
  </div>
  <div id="carouselControls" class="carousel slide w-100" data-bs-interval="-1">
      <div class="carousel-inner" id="slide-container">
        <% subsection.slides.forEach(slide => { %>
          <%- include('slide', { slide: slide }) %>
        <% }) %>
      </div>
      <button 
        class="carousel-control-prev"
        style="width: 10%;"  
        type="button" 
        data-bs-target="#carouselControls" 
        data-bs-slide="prev"
      >
          <span class="carousel-control-prev-icon"></span>
          <span class="visually-hidden">Previous</span>
      </button>
      <button 
        class="carousel-control-next" 
        style="width: 10%;" 
        type="button" 
        data-bs-target="#carouselControls" 
        data-bs-slide="next"
      >
          <span class="carousel-control-next-icon"></span>
          <span class="visually-hidden">Next</span>
      </button>
  </div>
</div>

<% if (locals.admin_view) { %>
  <div class="modal fade" id="modifySlideModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5">Modify Slide</h1>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <label for="newSlideName" class="form-label">Slide Name</label>
            <input type="text" class="form-control" id="newSlideName" name="newSlideName"> 
          </div>
          <div class="mb-3">
            <label class="form-label" for="section_id">
                Assigned Section
            </label>
            <select class="form-select" name="section_id" id="section_id">
                <option value="<%= subsection.section.id %>" selected>
                  <%= subsection.section.name %>
                </option>
                <% sections.forEach(section => { %>
                    <% if (subsection.section.id != section.id && section.subsections.length) { %>
                      <option value="<%= section.id %>">
                        <%= section.name %>
                      </option>
                    <% } %>
                <% }); %>
            </select>
          </div>  
          <div class="mb-3">
            <label class="form-label" for="section_id">
                Assigned Subsection
            </label>
            <select class="form-select" name="subsection_id" id="subsection_id">
                <option value="<%= subsection.id %>" selected><%= subsection.name %></option>
                <% var parent_section = sections.find(section => section.id == subsection.section.id) %>
                <% parent_section.subsections.forEach(s_subsection => { %>
                    <% if (s_subsection.id != subsection.id) { %>
                      <option value="<%= s_subsection.id %>"><%= s_subsection.name %></option>
                    <% } %>
                <% }); %>
            </select> 
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary" id="modifySlide">Save</button>
        </div>
      </div>
    </div>
  </div>
<% } %>


<% if (locals.admin_view) { %>
  <button 
    id="open-element-panel" class="d-none"
    data-bs-toggle="offcanvas" data-bs-target="#add-element-panel"
  ></button>
  <div 
    class="offcanvas offcanvas-end"
    style="width: fit-content !important; min-width: 25%;" 
    tabindex="-1" 
    id="add-element-panel" 
  >
    <div class="offcanvas-header">
        <h4 class="offcanvas-title m-2" id="add-element-panel-label">
          <span id="element-op-flag"><span id="element-operation">Add</span> Element</span>
        </h4>
        <button 
          id="close-element-panel"
          type="button" 
          class="btn-close me-1" 
          data-bs-dismiss="offcanvas"
        ></button>
    </div>
    <div class="offcanvas-body">
      <div class="row g-3 align-items-center">
        <div class="col-12 mt-0">
          <select class="form-select" id="component-form-selector">
            <option selected>Select Component</option>
            <% componentTypes.forEach(componentType => { %>
              <option value='<%=componentType.id %>'><%=componentType.name%></option>
            <% })%>
          </select>
          <script>
            document.getElementById("component-form-selector").selectedIndex = 0;
          </script>
        </div>
      </div>
      <% componentTypes.forEach(componentType => { %>
        <div 
          class="col-12 mt-3 component-form-container" 
          style="display: none;" 
          data-form-container="<%= componentType.id %>"
        >
        <%- include('component_form/base', {componentType: componentType }); %>
        </div>
      <% }); %>
    </div>
  </div>
<% } %>


<div 
  class="btn btn-primary position-fixed bottom-0 start-50 mb-4 translate-middle-x"
  style="z-index: 10;"
  data-bs-toggle="offcanvas"
  data-bs-target="#subsection-edit-side-panel"
>
  Slides
</div>

<div class="offcanvas offcanvas-bottom vh-100" tabindex="-1" id="subsection-edit-side-panel">
  <div class="offcanvas-header justify-content-center">
    <h4 class="offcanvas-title m-2 fs-1" id="subsection-edit-side-panel-label">
      Slides
    </h4>
    <button id="close-slide-offcanvas" type="button" class="btn-close  position-absolute top-0 end-0 p-5" data-bs-dismiss="offcanvas"></button>
  </div>
  <div class="offcanvas-body small">
    <% if (locals.admin_view) { %>
      <div class="input-group my-2 px-5">
        <button 
          class="btn btn-outline-primary btn-lg" 
          type="button" 
          id="add-slide-btn"
        >
          Add New Slide
        </button>
        <input 
          type="text"  
          class="form-control form-control-lg" 
          placeholder="Slide Name..."
          id="new-slide-name"
        >
      </div>
    <% } %>
    <div 
      id="panel-slide-container" 
      class="row row-cols-1 row-cols-md-2 row-cols-lg-3 align-items-stretch g-4 p-5"
    >
      <% subsection.slides.forEach(slide => { %>
        <%- include('slide_mock', { slide: slide }) %>
      <% }) %>
    </div>
  </div>
</div>

<script src="/scripts/subsection/slide.js" defer></script>
<% if (locals.admin_view) { %> 
  <script src="/scripts/subsection/admin/component.js" defer></script>
  <script src="/scripts/subsection/admin/slide.js" defer></script>
  <script src="/scripts/subsection/admin/dragAndDrop.js" defer></script>
  <script src="/scripts/subsection/admin/multipleChoiceQuestion.js" defer></script>
<% } %>
<%- include('../partials/footer') %>