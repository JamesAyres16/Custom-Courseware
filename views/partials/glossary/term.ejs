<div 
    id="term-<%= term.id %>" 
    class="term <%= term.name[0].toUpperCase() %> mb-3"
    data-term-id="<%= term.id %>"
    data-term-name="<%= term.name %>"
>
    <div class="d-flex justify-content-between align-items-end mb-2">
        <h4 class="term-name"><%= term.name %></h4>
        <% if (locals.admin_view) { %>
        <div>
            <button 
                class="btn btn-success me-md-2" 
                type="button"
                data-bs-toggle="modal" 
                data-bs-target="#add-term-modal"
                role="put"
            >
                Edit
            </button>
            <button 
                class="btn btn-danger" 
                type="button"
                data-bs-toggle="modal" 
                data-bs-target="#verify-delete-modal"
                data-show-delete-func="delete_term_verification"
            >
                Delete
            </button>
        </div>
        <% } %>
    </div>
    <div class="ps-3 description text-wrap text-break"><%- term.definition %></div>
</div>
