
<div class="modal fade" id="glossary-modal">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg">
        <div class="modal-content">
            <div class="modal-header d-block">
                <h1 class="modal-title fs-2 text-center">Glossary</h1>
                <div class="input-group my-3">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <div class="form-floating">
                        <input type="text" class="form-control" id="term-search" placeholder="">
                        <label for="term-search">search for terms here</label>
                    </div>
                </div>
                <div class="d-flex px-3 justify-content-around">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="search-flag" id="complete-search" checked>
                        <label class="form-check-label" for="complete-search">
                            Complete Search
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="search-flag" id="terms-only">
                        <label class="form-check-label" for="terms-only">
                        Terms Only
                        </label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="search-flag" id="definitions-only">
                        <label class="form-check-label" for="definitions-only">
                            Definitions Only
                        </label>
                    </div>
                </div>
            </div>
            <div class="modal-body">
                <div id="term-col" class="mx-3 pb-5"></div> 
            </div>
            <div class="modal-footer">
                <button 
                    id="close-glossary-modal"
                    type="button" 
                    class="btn btn-secondary" 
                    data-bs-dismiss="modal"
                >
                    Close
                </button>
                <% if (locals.admin_view) { %>
                <button 
                    type="button" 
                    class="btn btn-primary"
                    data-bs-toggle="modal"
                    data-bs-target="#add-term-modal"
                >
                    <i class="bi bi-plus"></i> Add Term
                </button> 
                <% } %>
            </div>
        </div>
    </div>
</div>
  
<% if (locals.admin_view) { %>
    <div class="modal fade" id="add-term-modal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <form id="add-term-form">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5">Add Term</h1>
                    </div>
                    <div class="modal-body">
                        <div class="form-floating">
                            <input 
                                type="text" 
                                class="form-control" 
                                id="name" 
                                name="name"
                                placeholder=""
                                required
                            >    
                            <label for="name" class="form-label">
                                Term
                            </label>
                        </div>
                        <div class="form-floating my-3">
                            <textarea 
                                style="height: 150px"
                                class="form-control" 
                                id="definition" 
                                name="definition"
                                placeholder=""
                                required
                            ></textarea>
                            <label for="definition" class="form-label">
                                Definition
                            </label>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button 
                            id="close-term-form"
                            type="button" 
                            class="btn btn-secondary" 
                            data-bs-toggle="modal" 
                            data-bs-target="#glossary-modal"
                        >
                            Close
                        </button>
                        <button type="submit" class="btn btn-primary">
                            Save
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script src="/scripts/glossary/admin/glossary.js" defer></script>
<% } %>
<script src="/scripts/glossary/glossary.js" defer></script>